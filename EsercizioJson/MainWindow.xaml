<Window x:Class="EsercizioJson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsercizioJson"
        xmlns:vm="clr-namespace:EsercizioJson.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <vm:Persone_VM x:Key="Persone_VM"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource Persone_VM}">
        <StackPanel>
        <ListBox x:Name="ListBox" ItemsSource="{Binding Items}" DisplayMemberPath="Nome" SelectedValue="{Binding SelectedPerson, Mode=Default}" />
        <TextBox x:Name="Nome"  Text="{Binding SelectedPerson.Nome, Mode=OneWay}" />
        <TextBox x:Name="Cognome" Text="{Binding SelectedPerson.Cognome}"   />
        <TextBox x:Name="Sesso"  Text="{Binding SelectedPerson.Sesso}"   />
        <TextBox x:Name="Età"  Text="{Binding SelectedPerson.Età}"   />
        <TextBox x:Name="Telefono" Text="{Binding SelectedPerson.Telefono, Mode=OneWay}"  /> 
        </StackPanel>
    </Grid>
</Window>
