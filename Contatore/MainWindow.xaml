<Window x:Class="Contatore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contatore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Width="500" Height="50">
            <TextBox x:Name="folderPathTxtB" Margin="2,2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Text, ElementName=txtB_copia}"/>
            <TextBox x:Name="txtB_copia" Margin="2,2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Path=Path, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock x:Name="contatore" Margin="2,2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Path=Conteggio, Mode=Default}" />
            
        </StackPanel>
        
    </Grid>
</Window>
