<Window x:Class="FileCounter_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:FileCounter_MVVM.ViewModel"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="FileCounter" Height="450" Width="800">
    <Window.Resources>
        <local:ClasseConverter x:Key="ClasseConverter"/>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical" Width="400">
            <TextBox x:Name="txtB_1" Margin="0 0 0 10" Width="400">
                <TextBox.Background>
                    <Binding Path="FolderPath" RelativeSource="{RelativeSource AncestorType=Window}">
                        <Binding.Converter>
                            <local:ClasseConverter />
                        </Binding.Converter>
                    </Binding>
                </TextBox.Background>
            </TextBox>
            <TextBox x:Name="folderPathTextBox" Margin="1" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding FolderPath, Mode=TwoWay}"/>
            <TextBlock x:Name="countfiles" Margin="1" FontWeight="Bold" Text="{Binding Count, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</Window>
